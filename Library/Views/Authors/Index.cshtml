@{Layout = "_Layout";}

@using Library.Models
@model List<Library.Models.Author>

<h1>AUTHORS</h1>

@if(Model.Count > 0)
{
  <ul>
    @foreach(Author author in Model)
    {
      <li>@Html.ActionLink($"{author.Name}", "Details", new {id = author.AuthorId})</li>
    }
  </ul>
}
else
{
  <h4>NO AUTHORS AT THE MOMENT</h4>
}

@Html.ActionLink("ADD AUTHOR", "Create", null, null, new { @class="btn-block" })